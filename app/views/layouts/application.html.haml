!!! 5
%html
  %head
    %title DEPS
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link{ href: 'https://fonts.googleapis.com/css?family=Oxygen:400,700,300', rel: 'stylesheet', type: 'text/css' }

  %body
    %header#main-header
      %h1 Deps
      %nav#main-navigation.pinned
        %ul
          %li= link_to 'blog', blogs_path, class: cp(blogs_path)
          = render '/categories/listcats'
          %li= link_to 'contact', contact_path, class: cp(contact_path)
      - if session[:user_id]
        %nav#admin-nav
          %ul
            %li= link_to 'Admin Home', admin_path, class: 'sketchco'
            %li= link_to 'New Blog Post', new_blog_path
            %li= link_to 'New Artwork', new_artwork_path
            %li= link_to 'Logout', logout_path, method: :delete, class: 'logout'
    #main-content
      = yield


  :javascript
    $('nav.pinned').pin({  minWidth: 480 })


    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-45732723-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

